pipeline {
    agent {
        label 'tsa'
    }
    post {
        always{
            echo 'Cleaning up workspace'
            deleteDir()
        }
        success {
            setBuildStatus("Build succeeded", "SUCCESS");
        }
        failure {
            setBuildStatus("Build failed", "FAILURE");
        }
    }
    stages {
        stage('Build') { 
            steps {
	    	sh '''#!/bin/bash
     	    	cd src
	    	make
                ''' 
            }
        }
        stage('Test') { 
            steps {
                sh '''
		./src/ffixed2free
		'''
            }
        }
    }
}
